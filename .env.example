# ============================================
# MyHealthURL Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# --------------------------------------------
# Practice Fusion OAuth
# --------------------------------------------
PRACTICE_FUSION_CLIENT_ID=your_client_id
PRACTICE_FUSION_CLIENT_SECRET=your_client_secret
PRACTICE_FUSION_DOCS_BASE_URL=https://qa-api.practicefusion.com/ehr/documents/v3

# --------------------------------------------
# Database
# --------------------------------------------
DATABASE_PATH=./data/myhealthurl.db

# --------------------------------------------
# AWS S3
# --------------------------------------------
# Uses AWS CLI profile for credentials (no explicit keys needed)
AWS_PROFILE=practice-fusion-admin
AWS_REGION=us-east-1
S3_BUCKET_NAME=smart-health-links

# --------------------------------------------
# Security Keys
# --------------------------------------------
# Generate with: openssl rand -hex 32
SESSION_SECRET=your_64_char_hex_string_here
ENCRYPTION_KEY=your_64_char_hex_string_here

# --------------------------------------------
# App URLs (for local development)
# --------------------------------------------
APP_URL=http://localhost:5173
API_URL=http://localhost:3000
VIEWER_URL=http://localhost:5174

# --------------------------------------------
# Server
# --------------------------------------------
PORT=3000
NODE_ENV=development

# --------------------------------------------
# SHL Defaults
# --------------------------------------------
SHL_EXPIRATION_DAYS_DEFAULT=90
SHL_EXPIRATION_DAYS_MAX=365

# --------------------------------------------
# Notifications (optional - leave blank to stub)
# --------------------------------------------
# Twilio SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# AWS SES Email
SES_FROM_EMAIL=
